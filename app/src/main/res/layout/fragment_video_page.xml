<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/video_player_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:keepScreenOn="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:use_controller="false"
        app:shutter_background_color="@android:color/transparent"
        app:surface_type="texture_view"
        app:use_artwork="false">

        <ImageView
            android:id="@+id/video_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop" />
    </com.google.android.exoplayer2.ui.PlayerView>


    <ImageView
        android:id="@+id/video_pause_indicator"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@android:drawable/ic_media_play"
        android:tint="@android:color/white"
        android:alpha="0.65"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/video_search_button"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/ic_search_white"
            android:tint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.529" />

        <ImageButton
            android:id="@+id/video_back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_arrow_back"
            android:tint="#FFFFFFFF"
            tools:layout_editor_absoluteX="-11dp"
            tools:layout_editor_absoluteY="4dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/right_actions"
        android:layout_width="56dp"
        android:layout_height="380dp"
        android:layout_marginEnd="1dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/video_player_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/video_player_view"
        app:layout_constraintVertical_bias="0.8">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clipChildren="false">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/avatar_circle_border" />

            <ImageView
                android:id="@+id/video_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/avatar_circle_placeholder"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/video_follow_plus"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="-4dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_plus_circle" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/action_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/video_like_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_heart_outline"
                android:tint="@null" />

            <TextView
                android:id="@+id/video_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:textColor="#EDEDED"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/video_comment_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_comment"
                android:tint="#FFFFFFFF" />

            <TextView
                android:id="@+id/video_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:textColor="#EDEDED"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/video_collect_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_star_outline"
                android:tint="@null" />

            <TextView
                android:id="@+id/video_collect_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:textColor="#EDEDED"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/video_share_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_share" />

            <TextView
                android:id="@+id/video_share_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:textColor="#EDEDED"
                android:textSize="12sp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/action_music_disc"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginTop="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/video_music_disc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:src="@drawable/ic_music_disc"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImageShape" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/video_time_bar"
        app:layout_constraintEnd_toStartOf="@id/right_actions"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/video_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:ellipsize="end" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/video_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:textColor="#EDEDED"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/video_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="...展开"
                android:textColor="#CCEDEDED"
                android:textSize="13sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/video_description"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <com.google.android.exoplayer2.ui.DefaultTimeBar
        android:id="@+id/video_time_bar"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:ad_marker_color="#80FFFFFF"
        app:bar_height="2dp"
        app:buffered_color="#33FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/comment_entry_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:played_color="#80FFFFFF"
        app:scrubber_color="#FFFFFF"
        app:scrubber_dragged_size="10dp"
        app:scrubber_disabled_size="6dp"
        app:scrubber_enabled_size="6dp"
        app:touch_target_height="32dp"
        app:unplayed_color="#20FFFFFF" />

    <LinearLayout
        android:id="@+id/comment_entry_bar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_comment_entry"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/comment_entry_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="发表评论，和大家一起讨论"
            android:textColor="#808080"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/comment_entry_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/ic_image"
            android:tint="#FFFFFFFF" />

        <ImageButton
            android:id="@+id/comment_entry_mention"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/ic_mention"
            android:tint="#FFFFFFFF" />

        <ImageButton
            android:id="@+id/comment_entry_emoji"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/ic_emoji"
            android:tint="#FFFFFFFF" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/heart_anim_layer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
